@page
@model Students.Pages.Students.CreateModel
@{
    ViewData["Title"] = "Додати студента";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Анкета студента</h4>
                </div>
                <div class="card-body">
                    <form method="post" class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Student.Name" class="form-label fw-bold"></label>
                            <input asp-for="Student.Name" class="form-control" placeholder="Введіть ім’я" />
                            <span asp-validation-for="Student.Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Student.Age" class="form-label fw-bold"></label>
                            <input asp-for="Student.Age" class="form-control" placeholder="Вік" />
                            <span asp-validation-for="Student.Age" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Student.Group" class="form-label fw-bold"></label>
                            <input asp-for="Student.Group" class="form-control" placeholder="Група" />
                            <span asp-validation-for="Student.Group" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input asp-for="Student.IsGrade" class="form-check-input" type="checkbox" />
                                <label asp-for="Student.IsGrade" class="form-check-label fw-bold"></label>
                            </div>
                        </div>
                        <div class="col-12 text-end">
                            <button type="submit" class="btn btn-success px-4">💾 Зберегти</button>
                            <a href="/" class="btn btn-secondary ms-2">⬅ Назад</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>